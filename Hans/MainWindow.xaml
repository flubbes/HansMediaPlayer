<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Hans.MainWindow" Height="612" Width="864" MinWidth="864" MinHeight="612" Title="Hans Audio Player 1.0 (&quot;Schlauchboot&quot;)">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="335*"/>
			<ColumnDefinition Width="210*"/>
			<ColumnDefinition Width="311*"/>
		</Grid.ColumnDefinitions>
		<Button x:Name="ButtonPlayPause" Content="Play" HorizontalAlignment="Left" Margin="100,510,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonPlayPause_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Left" Margin="185,510,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonStop_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button x:Name="ButtonNext" Content="Next" HorizontalAlignment="Left" Margin="270,510,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonNext_Click" Grid.ColumnSpan="2">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button x:Name="ButtonPrevious" Content="Previous" HorizontalAlignment="Left" Margin="15,510,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonPrevious_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Slider x:Name="SliderSongProgress" HorizontalAlignment="Left" Margin="15,547,0,0" VerticalAlignment="Top" Width="824" Grid.ColumnSpan="3"/>
		<Slider x:Name="SliderVolume" Margin="25,510,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="175" ValueChanged="SliderVolume_ValueChanged" LargeChange="0.01" TickFrequency="0.01" Maximum="1" Value="1" Grid.Column="1"/>
		<ListView x:Name="ListViewSongQueue" HorizontalAlignment="Center" Height="508" Margin="20,39,24,0" VerticalAlignment="Top" Width="267" Grid.Column="2">
			<ListView.View>
				<GridView>
					<GridViewColumn Width="100" Header="Artist" DisplayMemberBinding="{Binding Artist}"/>
					<GridViewColumn Width="140" Header="Title" DisplayMemberBinding="{Binding Title}"/>
				</GridView>
			</ListView.View>
			<ComboBox Height="100" Width="120"/>
		</ListView>
		<TabControl Height="456" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,39,10,0">
			<TabItem Header="Search services">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="287*"/>
						<ColumnDefinition Width="147*"/>
						<ColumnDefinition Width="95*"/>
					</Grid.ColumnDefinitions>
					<Button x:Name="ButtonSearch" Content="Search" Margin="11,0,10,396.08" VerticalAlignment="Bottom" Click="ButtonSearch_Click" Height="21.96" Grid.Column="2"/>
					<ComboBox x:Name="ComboBoxService" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top" Width="130" Height="21.96" Grid.Column="1"/>
					<TextBox x:Name="TextBoxQuery" HorizontalAlignment="Left" Height="21.96" Margin="10,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="270" SpellCheck.IsEnabled="True" AcceptsReturn="False" />
					<ListView x:Name="ListViewSearch" Margin="10,36.96,10,10" RenderTransformOrigin="0.583,0.639" Grid.ColumnSpan="3">
						<ListView.ContextMenu>
							<ContextMenu>
								<MenuItem Header="Add to playlist" x:Name="MenuItemAddToPlaylist" Click="MenuItemAddToPlaylist_OnClick"/>
							</ContextMenu>
						</ListView.ContextMenu>
						<ListView.View>
							<GridView>
								<GridViewColumn Width="170" Header="Artist" DisplayMemberBinding="{Binding Artist}"/>
								<GridViewColumn Width="230" Header="Title" DisplayMemberBinding="{Binding Title}"/>
								<GridViewColumn Width="50" Header="Length" DisplayMemberBinding="{Binding Title}"/>
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
			</TabItem>
			<TabItem Header="Library">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
		<Menu HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="836" Grid.ColumnSpan="3" Background="White">
			<MenuItem Header="File">
				<MenuItem Header="Exit" />
			</MenuItem>
			<MenuItem Header="Library">
				<MenuItem Header="Add From Directory" Click="MenuItem_OnClick"/>	
			</MenuItem>
		</Menu>
        
	</Grid>
</Window>