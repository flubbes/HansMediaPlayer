<Window x:Class="Hans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="572" Width="864">
    <Grid>
        <Button x:Name="ButtonPlayPause" Content="Play" HorizontalAlignment="Left" Margin="100,471,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonPlayPause_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Left" Margin="185,471,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonStop_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButtonNext" Content="Next" HorizontalAlignment="Left" Margin="270,471,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonNext_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButtonPrevious" Content="Previous" HorizontalAlignment="Left" Margin="15,471,0,0" VerticalAlignment="Top" Width="80" Height="24" BorderThickness="1" Background="#FFDCD8D8" RenderTransformOrigin="0.5,0.5" Click="ButtonPrevious_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Slider x:Name="SliderSongProgress" HorizontalAlignment="Left" Margin="10,513,0,0" VerticalAlignment="Top" Width="836"/>
        <Slider x:Name="SliderVolume" Margin="370,477,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="175" ValueChanged="SliderVolume_ValueChanged" LargeChange="0.01" TickFrequency="0.01" Maximum="1" Value="1"/>
        <ListView x:Name="ListViewSongQueue" HorizontalAlignment="Center" Height="498" Margin="565,10,10,0" VerticalAlignment="Top" Width="281">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Path=Artist}"/>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Title}"/>
                </GridView>
            </ListView.View>
            <ComboBox Height="100" Width="120"/>
        </ListView>
        <TabControl HorizontalAlignment="Left" Height="456" VerticalAlignment="Top" Width="535">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" Margin="80,170,34,-37">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="46*"/>
                        <ColumnDefinition Width="140*"/>
                        <ColumnDefinition Width="188*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="ButtonSearch" Content="Search" HorizontalAlignment="Left" Margin="117,-164,-4,0" VerticalAlignment="Top" Width="75" Click="ButtonSearch_Click" Grid.Column="4"/>
                    <ComboBox x:Name="ComboBoxService" HorizontalAlignment="Left" Margin="110,-166,0,0" VerticalAlignment="Top" Width="142" Grid.ColumnSpan="2" Grid.Column="3"/>
                    <TextBox x:Name="TextBoxQuery" HorizontalAlignment="Left" Height="23" Margin="-78,-167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Grid.ColumnSpan="4"/>
                    <ListView x:Name="ListViewSearch" HorizontalAlignment="Center" Height="399" Margin="-78,-139,-37,0" VerticalAlignment="Top" Width="530" Grid.ColumnSpan="5">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add to playlist" x:Name="MenuItemAddToPlaylist" Click="MenuItemAddToPlaylist_OnClick"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}"/>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Test" HorizontalAlignment="Left" Margin="187,185,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>